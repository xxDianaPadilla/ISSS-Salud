<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_bandeja_chat"
    style="@style/background2">

  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@id/constraintLayout5"
      android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constraintLayout2"
      android:layout_width="390dp"
      android:layout_height="69dp"
      android:layout_marginTop="16dp"
      style="@style/backgroundBox2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.444"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivFotoDoctorC"
        android:layout_width="55dp"
        android:layout_height="53dp"
        android:layout_marginStart="88dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundImage" />

    <TextView
        android:id="@+id/txtNombreDoctor"
        style="@style/TextColor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_extrabold_italic"
        android:text="Nombre doctor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.248"
        app:layout_constraintStart_toEndOf="@+id/ivFotoDoctorC"
        app:layout_constraintTop_toTopOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rcvMensajes"
          android:layout_width="393dp"
          android:layout_height="match_parent"
          android:layout_marginTop="12dp"
          android:paddingBottom="65dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.476"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
          app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.core.widget.NestedScrollView>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constraintLayout5"
      style="@style/backgroundBox3"
      android:layout_width="412dp"
      android:layout_height="86dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent">

    <ImageView
        android:id="@+id/ivMenuCircle"
        style="@style/backgroundMenu2"
        android:layout_width="41dp"
        android:layout_height="43dp"
        android:layout_marginStart="102dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCitas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4600"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/btnCitas"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="67dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BtnChats"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/ic_citas" />

    <ImageView
        android:id="@+id/BtnChats"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnPerfil"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/ic_active_chat" />

    <ImageView
        android:id="@+id/btnPerfil"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_perfil" />

    <ImageView
        android:id="@+id/btnNoticias"
        android:layout_width="35dp"
        android:layout_height="34dp"
        android:layout_marginStart="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_home" />

  </androidx.constraintlayout.widget.ConstraintLayout>

  <EditText
      android:id="@+id/txtMensaje"
      android:layout_width="387dp"
      android:layout_height="wrap_content"
      android:minHeight="48dp"
      android:layout_marginBottom="12dp"
      android:background="@drawable/ic_edittext_background"
      android:ems="10"
      android:fontFamily="@font/raleway_semibold"
      android:hint="Mensaje..."
      android:inputType="textMultiLine"
      android:paddingEnd="30dp"
      android:textColor="#000000"
      android:textColorHint="#c8c8c8"
      android:textSize="16sp"
      app:layout_constraintBottom_toTopOf="@id/constraintLayout5"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <ImageView
      android:id="@+id/btnEnviarMensaje"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="@+id/txtMensaje"
      app:layout_constraintEnd_toEndOf="@+id/txtMensaje"
      app:layout_constraintHorizontal_bias="0.959"
      app:layout_constraintStart_toStartOf="@+id/txtMensaje"
      app:layout_constraintTop_toTopOf="@+id/txtMensaje"
      app:layout_constraintVertical_bias="0.541"
      app:srcCompat="@drawable/ic_sent" />

</androidx.constraintlayout.widget.ConstraintLayout>