<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ImgDoctorPerfil"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewNombreDoctor"
        app:shapeAppearanceOverlay="@style/RoundImage" />

    <TextView
        android:id="@+id/txtViewNombreDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/location_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRIMERA AV. NORTE 1256 ENTRE 21 23 CALLE PONIENTE BARRIO SAN MIGUELITO"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="565dp" />

    <TextView
        android:id="@+id/email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Acceso directos"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/email_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Carlos_Ga@gmail.com"
        app:layout_constraintTop_toBottomOf="@+id/email_label"
        tools:layout_editor_absoluteX="37dp" />

    <TextView
        android:id="@+id/specialty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Especialista: Médico general"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="467dp" />

    <TextView
        android:id="@+id/doctor_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor: Carlos García"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="441dp" />

    <TextView
        android:id="@+id/medical_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unidad médica: Clínica Comunal San Miguelito"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="494dp" />

    <TextView
        android:id="@+id/location_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicación:"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="545dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="140dp"
        android:background="@drawable/ic_regresar"
        app:layout_constraintEnd_toStartOf="@+id/txtViewNombreDoctor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImgDoctorPerfil"
        app:srcCompat="@drawable/ic_linea_division" />

</androidx.constraintlayout.widget.ConstraintLayout>
